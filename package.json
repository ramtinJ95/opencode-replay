{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "opencode-replay",
  "version": "1.0.2",
  "description": "Generate static HTML transcripts from OpenCode sessions",
  "type": "module",
  "bin": {
    "opencode-replay": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && rm -rf ./dist/assets && cp -r ./src/assets ./dist/assets",
    "dev": "bun run ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jsdom": "^27.0.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "opencode",
    "ai",
    "coding",
    "transcripts",
    "sessions",
    "html",
    "cli"
  ],
  "author": "ramtinj95",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ramtinj95/opencode-replay"
  },
  "homepage": "https://github.com/ramtinj95/opencode-replay#readme",
  "bugs": {
    "url": "https://github.com/ramtinj95/opencode-replay/issues"
  }
}
